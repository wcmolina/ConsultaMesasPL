<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="mer.controllers.ApplicationController">
    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <HBox VBox.vgrow="ALWAYS">
            <VBox styleClass="sidebar">
                <Button fx:id="findByTables" alignment="TOP_LEFT" minWidth="150.0" mnemonicParsing="false"
                        onAction="#changeToTableView" styleClass="sidebar-btn" text="Mesas electorales"/>
                <Button fx:id="findByCitizens" alignment="TOP_LEFT" minWidth="150.0" mnemonicParsing="false"
                        onAction="#changeToCitizenView" styleClass="sidebar-btn" text="Miembros MER"/>
            </VBox>
            <AnchorPane fx:id="mainContent" HBox.hgrow="ALWAYS"/>
        </HBox>
    </VBox>
</AnchorPane>
