<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>

<MenuBar fx:id="menu" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.111"
         fx:controller="mer.controllers.MenuController">
    <menus>
        <Menu fx:id="fileMenu" mnemonicParsing="false" text="Archivo">
            <items>
                <MenuItem mnemonicParsing="false" text="Cerrar"/>
            </items>
        </Menu>
        <Menu fx:id="editMenu" mnemonicParsing="false" text="Editar">
            <items>
                <MenuItem fx:id="editMenuItem" mnemonicParsing="false" text="Buscar..." onAction="#showQueryStage"/>
            </items>
        </Menu>
        <Menu fx:id="aboutMenu" mnemonicParsing="false" text="Ayuda">
            <items>
                <MenuItem mnemonicParsing="false" text="Acerca de"/>
            </items>
        </Menu>
    </menus>
</MenuBar>
