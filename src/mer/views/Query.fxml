<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="query" prefHeight="309.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/8.0.111"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="mer.controllers.QueryController">
    <children>
        <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                    AnchorPane.topAnchor="0.0">
            <top>
                <ImageView fitWidth="450.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
                    <image>
                        <Image url="@assets/banner.jpg"/>
                    </image>
                </ImageView>
            </top>
            <center>
                <VBox alignment="CENTER" BorderPane.alignment="CENTER">
                    <children>
                        <Label text="Escriba su consulta aquí" textFill="#333333">
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="queryInput" prefHeight="35.0" prefWidth="550.0"
                                   promptText="Buscar por nombre o número de identidad" alignment="CENTER">
                            <VBox.margin>
                                <Insets bottom="10.0" left="15.0" right="15.0" top="10.0"/>
                            </VBox.margin>
                        </TextField>
                        <SplitMenuButton fx:id="search" mnemonicParsing="false" text="Buscar miembros"
                                         onAction="#sendQueryToTable">
                            <items>
                                <MenuItem fx:id="searchMiembros" mnemonicParsing="false" text="Buscar miembros"
                                          onAction="#changeSearchBy"/>
                                <MenuItem fx:id="searchMer" mnemonicParsing="false" text="Buscar mesas"
                                          onAction="#changeSearchBy"/>
                            </items>
                        </SplitMenuButton>
                    </children>
                </VBox>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
